<h1>Listing Memes</h1>

<% @memes.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |meme| %>
      <div class="span4">
        <%= image_tag meme.picture_url, :width => '100%' if meme.picture.present?%>
        <h4><%= link_to meme.title, meme %></h4>

      </div>
    <% end %>
  </div>
<% end %>






